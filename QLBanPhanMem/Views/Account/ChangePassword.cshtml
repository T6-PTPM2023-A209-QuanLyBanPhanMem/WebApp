@model QLBanPhanMem.Models.AccountModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item" aria-current="true"><a href="/Account/Edit/">Tài khoản</a></li>
            <li class="list-group-item" aria-current="true"><a href="/Account/History/">Lịch sử đơn hàng</a></li>
            <li class="list-group-item active" aria-current="true"><a href="/Account/ChangePassword/">Mật khẩu</a></li>
            <li class="list-group-item" aria-current="true"><a asp-action="FavoriteProduct" asp-controller="Account">Sản phẩm yêu thích</a></li>
            <li class="list-group-item" aria-current="true"><a asp-action="ShareWebsite" asp-controller="Account">Giới thiệu bạn bè</a></li>
        </ul>
    </div>
    <div class="col-md-8">
        @ViewBag.notice
        @ViewBag.email
        <form asp-controller="Account" asp-action="ChangePassword">
            <!-- Name input -->
            

            <!-- Password input -->
            
            <div class="form-outline mb-4">
                <input name="oldPassword" type="password" id="oldPassword" class="form-control" />
                <label class="form-label" for="registerPassword">Mật khẩu cũ</label>
            </div>
            <div class="form-outline mb-4">
                <input name="newPassword" type="password" id="newPassword" class="form-control" />
                <label class="form-label" for="registerPassword">Mật khẩu mới</label>
            </div>
            <div class="form-outline mb-4">
                <input name="password" type="password" id="rewritePassword" class="form-control" />
                <label class="form-label" for="registerPassword">Nhập lại mật khẩu mới</label>
            </div>
            <!-- Submit button -->
            <button action="ChangePassword" type="submit" class="btn btn-primary btn-block mb-3">Đăng ký</button>
        </form>
    </div>
</div>

