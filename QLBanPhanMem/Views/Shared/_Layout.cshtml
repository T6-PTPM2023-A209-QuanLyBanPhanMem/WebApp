@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Up Modern</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- Bootstrap -->

   @*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
 *@

     <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
          rel="stylesheet" />
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />   
    
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger chat-title="ChatBoxPhanMem"
                  agent-id="9015758a-bf16-4ec8-bd74-fcb0256276c2"
                  language-code="en"></df-messenger>
</head>
<body>
    <section class="myHeader">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-2">
                    <a href="/Home/Index/">
                        <img src="~/image/logo_index.png" class="img-fluid" />
                    </a>
                </div>
                <div class="col-md-4 py-2">

                    <form class="d-flex" action="/Product/Index/" method="get">
                        <div class="input-group mb-0" style="line-height: 2">
                            <input class="form-control" type="text" name="search" placeholder="Tìm sản phẩm" aria-label="Tìm sản phẩm">
                            <span class="input-group-text bg-primary text-white" id="basic-addon2">
                                <i id="search" class="fa-solid fa-magnifying-glass"></i>
                            </span>

                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    var iconSearch = document.querySelector('#search');
                                    var form = document.querySelector('form');

                                    iconSearch.addEventListener('click', function (e) {
                                        e.preventDefault();
                                        form.submit();
                                    });
                                });
                            </script>
                        </div>
                    </form>

                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-1">
                            <div class="fs-2">
                                <i class="fa-regular fa-circle-user text-danger"></i>                               
                            </div>                           
                        </div>    
                        
                        <div class="col-11">
                            @{
                                if (ViewBag.email == null)
                                {
                                    <a asp-area="" asp-controller="Account" asp-action="SignIn" style="text-decoration: none">
                                        <span class="text-danger" style="font-size: 30px; font-weight: bold">Đăng nhập</span>
                                    </a>
                                }
                                else
                                {
                                    <div class="dropdown">
                                        <a id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class='bx bxs-user-detail'></i>
                                            <span style="vertical-align: middle; font-size: 30px">@ViewBag.email</span>

                                        </a>

                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item text-dark" href="/Account/TopUp">Nạp tiền</a></li>
                                            <li><a class="dropdown-item text-dark" href="/Account/Edit/@ViewBag.uid">Quản lý tài khoản</a></li>
                                            <li><a class="dropdown-item text-dark" href="/Account/History/@ViewBag.uid">Lịch sử đơn hàng</a></li>
                                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Account" asp-action="SignOut">Đăng xuất</a></li>
                                        </ul>
                                    </div>

                                }
                            }
                        </div>

                    </div>                   
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" asp-controller="Cart" class="position-relative">
                        <span class="fs-3 text-black">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </span>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @if (ViewBag.giohang == null)
                            {
                                <text>0</text>
                            }
                            else
                            {
                                @ViewBag.giohang
                            }
                        </span>
                    </a>
                </div>



            </div>

           

        </div>
    </section>
    <section class="mainMenu bg-info">
        <div class="container">
            <div class="row justify-content-center">
               

                <div class="col-md-auto">
                    <nav class="navbar navbar-expand-lg bg-info">
                        <div class="container-fluid">
                            
                            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link active text-white" aria-cu rrent="page" href="/Home/Index/">Sản phẩm mua nhiều</a>
                                    </li>
                                  
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Danh mục phần mềm
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">Action</a></li>
                                            <li><a class="dropdown-item" href="#">Another action</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                                        </ul>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-white" aria-disabled="true">Sản phẩm khuyến mại</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="/Product/Index/" aria-disabled="true">Tất cả sản phẩm</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-white" aria-disabled="true">Liên hệ</a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
            <div class="row">
                @RenderBody()
            </div>
    </div>
    
    @{
        if (ViewBag.email == null)
        {
            <section class="mycontent1 bg-dark text-white py-4">

                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="~/image/yeucaudangnhap.svg" class="img-fluid" />
                        </div>

                        <div class="col-md-9">
                            <p>
                                Bạn chưa có tài khoản?
                            </p>
                            <p>
                                Hãy tạo ngay một tài khoản để sử dụng đầy đủ các tính năng, tích lũy ưu đãi khi thanh toán các sản phẩm và tham gia vào chương trình Giới thiệu bạn bè nhận hoa hồng vĩnh viễn tại Up Modern.
                            </p>
                            <p>
                                <a asp-area="" asp-controller="Account" asp-action="SignIn" style="text-decoration: none">
                                    <button class="btn btn-primary">Đăng ký ngay</button>
                                </a>

                                Hoặc bạn đã có tài khoản?
                                <a asp-area="" asp-controller="Account" asp-action="SignIn" style="text-decoration: none">
                                    <span class="text-danger" style="font-size: 30px; font-weight: bold">Đăng nhập</span>
                                </a>
                            </p>
                        </div>

                    </div>
                </div>
            </section>
        }
    }

    <section class="myfoother text-dark py-4" style="background: #f3f4f6">
        <div class="container">
            <div class="row" >
                <div class="col-md-3">
                    <h4 >
                        Giới thiệu
                    </h4>

                    <ul class="list-menu">
                        <li class="li_menu"><a href="/" title="Phần mềm bản quyền là gì">Phần mềm bản quyền là gì</a></li>
                        <li class="li_menu"><a href="/" title="Giới thiệu">Giới thiệu</a></li>
                        <li class="li_menu"><a href="/" title="Điều khoản">Điều khoản</a></li>
                        <li class="li_menu"><a href="/" title="Chính sách bảo mật">Chính sách bảo mật</a></li>                       
                    </ul>
                </div>

                <div class="col-md-3">
                    <h5>
                        Liên hệ
                    </h5>

                    <ul class="list-menu">
                        <li class="li_menu">
                            <a href="/" title="">
                                Hotline tự động 1900 633 305
                            </a>
                        </li>
                        <li class="li_menu"><a href="/" title="">Liên hệ Hỗ trợ</a></li>
                        <li class="li_menu"><a href="/" title="">Liên hệ Hỗ trợ</a></li>
                        <li class="li_menu"><a href="/" title="">Chat với CSKH</a></li>                       
                    </ul>
                </div>               

               
            </div>
            <div class="row">
                <div class="col-md-6">
					<h4>
						<span>
							Website phần mềm Up Modern
						</span>
					</h4>
                    <ul class="list-menu">
                        <p class="m-0">Copyright 2021 Công ty cổ phần thương mại Up Modern</p>
                        <p class="m-0">Chứng nhận ĐKKD số: 0388282938 do sở KH &amp; ĐT TP.Hà Nội cấp</p>
                        <p class="m-0">Địa chỉ: Tòa nhà Ladeco 266 Đội Cấn, Ba Đình, Hà Nội</p>
                        <p class="m-0">
                            Điện thoại: 111111
                        </p>
					</ul>
				</div>

                <div class="col-md-6">
                    <h4>
                        <span>
                            Nhận tin khuyến mãi
                        </span>
                    </h4>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Đăng ký nhận email" aria-label="Đăng ký nhận email" aria-describedby="basic-addon2">
                        <span class="input-group-text text-white bg-danger" id="basic-addon2">Đăng ký</span>
                    </div>

                    

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div>
                        Bản quyền thuộc về <a href="https://boronco-template.mysapo.net/">Ego Creative</a>
                        <span class="opacity1">
                            Cung cấp bởi Sapo
                        </span>
                    </div>
                </div>             
            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
